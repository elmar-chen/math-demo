{
    "name": "aem-maven-archetype",
    "version": "1.0.0",
    "description": "Generates an AEM Frontend project with Webpack",
    "repository": {
        "type": "git",
        "url": "https://github.com/adobe/aem-project-archetype"
    },
    "private": true,
    "main": "src/main/webpack/site/main.ts",
    "license": "SEE LICENSE IN LICENSE.txt",
    "scripts": {
        "dev": "webpack --config ./webpack.dev.js && clientlib --verbose",
        "devSync": "npm run dev && node ./testSync.js",
        "prodSync": "npm run prod && node ./testSync.js",
        "prod": "webpack --config ./webpack.prod.js && clientlib --verbose",
        "start": "webpack server --open --config ./webpack.dev.js",
        "sync": "aemsync -d --mode='production' ../ui.apps/src/main/content",
        "watch": "webpack-dev-server --config ./webpack.dev.js --env.writeToDisk & watch 'clientlib' ./dist & aemsync -w ../ui.apps/src/main/content"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.3.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
        "@types/google.maps": "^3.45.1",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "acorn": "^6.1.0",
        "aem-clientlib-generator": "^1.7.5",
        "aemsync": "^4.0.3",
        "browserslist": "^4.2.1",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.0.4",
        "css-loader": "^5.2.4",
        "eslint": "^7.28.0",
        "eslint-loader": "^4.0.2",
        "html-webpack-plugin": "^5.3.1",
        "node-sass": "^4.11.0",
        "sass": "^1.17.2",
        "sass-loader": "^7.1.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.14.1",
        "ts-loader": "^5.3.3",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "typescript": "^4.3.2",
        "watch": "^1.0.2",
        "webpack": "^5.37.1",
        "webpack-cli": "^4.6.0",
        "webpack-dev-server": "^3.11.2",
        "webpack-import-glob-loader": "^1.6.3",
        "webpack-merge": "^5.7.3"
    },
    "dependencies": {
        "@googlemaps/js-api-loader": "^1.12.1",
        "axios": "^0.21.1",
        "css-minimizer-webpack-plugin": "^3.0.0",
        "dompurify": "^2.2.8",
        "gl-matrix": "^3.3.0",
        "install": "^0.13.0",
        "jquery": "^3.6.0",
        "lit-html": "^1.3.0",
        "mini-css-extract-plugin": "^1.6.0",
        "npm": "^7.19.1",
        "paginationjs": "^2.1.5",
        "swiper": "^7.0.1",
        "terser-webpack-plugin": "^5.1.2",
        "animejs": "^3.2.1"
    },
    "browserslist": [
        "last 2 version",
        "> 1%"
    ]
}
